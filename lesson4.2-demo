<html>
<body>

hello world
<p>this <b>is</b> a paragraph</p>

<button id='button1'>button one</button>

<input type="text" id='inputBox'/>
<button id='add'>add</button>
<!-- The second value will be selected initially -->
<select id="select" size="5">
  <option value="value1">Value 1</option> 
  <option value="value2" selected>Value 2</option>
  <option value="value3">Value 3</option>
</select>
   
<script>
console.log('hello world!!!');
// try using a function named alert

var addClickHandler = function () {
    console.log('add button clicked');
    // get text from input text box 
    var inputBoxObject = document.getElementById('inputBox');
    var myText = inputBoxObject.value;
    console.log(myText);
    // add it to the select list
    var selectObject = document.getElementById('select');
    var option = document.createElement("option");
    option.text = myText;
    selectObject.add(option);
}

var addButtonObject = document.getElementById('add');

addButtonObject.onclick = addClickHandler;


var clickHandler = function () {
    var theButton = document.getElementById('button1');
    theButton.innerText = 'clicked';
}

// All browsers have an object called document
// document has a field named getElementById whose value is a function
// The getElementById function takes one parameter which is the 'id' of the element to get.
// The getElementById function returns an object... The object represents a button (in this case)
var buttonObject = document.getElementById('button1');

// The button object contains a field called onclick.
buttonObject.onclick = clickHandler;

</script>

<p></p>
